sub clean_line {
  $_[0] =~ s/\/\*//g;
  $_[0] =~ s/\/\///g;
  chomp $_[0];
  $_[0] =~ s/\*\///g;
  $_[0] =~ s/^\s*//g;
  $_[0] =~ s/\s*$//g;
  $_[0] =~ s/=//g;
}

sub print_license  {

  my $RES   = $_[0];
  my $NAME = $_[1];

  if ($NAME =~ /\.pl$/) {
    for my $i (0 .. $#year1) {
      print RES "# Copyright (C) $year1[$i]$toyear2[$i] $copyauth[$i]\n";
    }
    print RES <<""
